<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous">
        <title>{{i18n.createIssue}} | {{appName}}</title>
    </head>
    <body>
        <div class="container p-5">
            <div class="card card-body bg-light">
                <h1>{{i18n.newIssueFor}} <i>{{repository}}</i></h1>
                {{#missingFields}}
                    <div class="alert alert-danger">
                        {{i18n.errors.missingFields}}
                    </div>
                {{/missingFields}}
                {{#secretIncorrect}}
                    <div class="alert alert-danger">
                        {{i18n.errors.wrongSecret}}
                    </div>
                {{/secretIncorrect}}
                {{#tooShort}}
                    <div class="alert alert-danger">
                        {{i18n.errors.tooShort}}
                    </div>
                {{/tooShort}}
                {{#unknownError}}
                    <div class="alert alert-warning">
                        {{i18n.errors.unknownError}}
                    </div>
                {{/unknownError}}
                {{#issueCreatedSuccessfully}}
                    <div class="alert alert-success">
                        {{i18n.issueCreatedSuccessfully.part1}} <a href="{{issueURL}}" target="_blank">{{i18n.issueCreatedSuccessfully.part2}}</a> {{i18n.issueCreatedSuccessfully.part3}}<br><br>
                        {{i18n.issueCreatedSuccessfully.part4}} <a href="/{{urlKey}}">{{i18n.issueCreatedSuccessfully.part5}}</a>{{i18n.issueCreatedSuccessfully.part6}}
                    </div>
                {{/issueCreatedSuccessfully}}
                {{^issueCreatedSuccessfully}}
                <form method="POST" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="title" class="col-sm-2 col-form-label">{{i18n.title}} <i class="text-danger">*</i></label>
                        <div class="col-sm-10">
                            <input type="text" name="title" class="form-control" id="title" value="{{title}}" placeholder="{{i18n.title}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="location" class="col-sm-2 col-form-label">{{i18n.location}} <i class="text-danger">*</i></label>
                        <div class="col-sm-10">
                            <textarea name="location" class="form-control" id="location" placeholder="{{i18n.location}}">{{location}}</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-2 col-form-label">{{i18n.description}} <i class="text-danger">*</i></label>
                        <div class="col-sm-10">
                            <textarea name="description" class="form-control" id="description" placeholder="{{i18n.description}}">{{description}}</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="suggestion" class="col-sm-2 col-form-label">{{i18n.suggestion}} <i class="text-danger">*</i></label>
                        <div class="col-sm-10">
                            <textarea name="suggestion" class="form-control" id="suggestion" placeholder="{{i18n.suggestion}}">{{suggestion}}</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="secret" class="col-sm-2 col-form-label">{{i18n.secret}} <i class="text-danger">*</i></label>
                        <div class="col-sm-10">
                            <input type="password" name="secret" class="form-control" id="secret" value="" placeholder="{{i18n.secret}}">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="screenshot" class="col-sm-2 col-form-label">{{i18n.screenshot}}</label>
                        <div class="col-sm-10">
                            <div class="">
                                <input type="file" class="" name="screenshot" id="screenshot">
                                <label class="" for="screenshot">{{i18n.screenshot}}</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="description" class="col-sm-2 col-form-label">{{i18n.submit}}</label>
                        <div class="col-sm-10">
                            <input type="submit" class="btn btn-primary" name="submit" value="{{i18n.submit}}">
                        </div>
                    </div>
                </form>
                {{/issueCreatedSuccessfully}}
                <small class="text-right">&copy; Hannes RÃ¼ger, 2020</small>
            </div>
        </div>
    </body>
</html>